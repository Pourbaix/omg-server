<div class="row ml-4 mr-4">
    <!-- Earnings (Monthly) Card Example -->
    <div class="col-sm-12 mb-4">
        <div class="card border-bottom-primary shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text font-weight-bold text-primary text-uppercase mb-1">
                            Automatic import
                        </div>
                    </div>
                </div>
                <hr class="sidebar-divider">
                <!-- formulaire auto import -->
                <iframe name="dummyframe" id="dummyframe" style="display: none;"></iframe>
                <form class="ml-4 mr-4" action="/data/file" method="POST" enctype="multipart/form-data">
                    <div class="row">
                        <label for="pumpModelSelector">Pump model :</label>
                        <select class="form-control" id="pumpModelSelector" name="pumpModel">
                            <option value="minimed" selected>MiniMed</option>
                        </select>
                    </div>
                    <div class="row form-group ">
                        <label class="invisible" for="dataFileAutoInput">Pump data csv :</label>
                        <input type="file" class="form-control-file" id="dataFileAutoInput" name="file" accept=".csv">
                    </div>
                    <div class="row d-flex justify-content-end">
                        <button type="submit"  class="btn btn-secondary btn-icon-split">
                            <span class="icon text-white-50">
                                <i class="fas fa-upload"></i>
                            </span>
                            <span class="text">Upload data</span>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-sm-12 mb-4">
        <div class="card border-bottom-warning shadow h-100 py-2 ">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text font-weight-bold text-warning text-uppercase mb-1">
                            Manual import</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">coming soon...</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-wrench fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="js/templatesFunctions.js"></script>
